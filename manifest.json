{
  "manifest_version": 3,
  "name": "Instagram Spam Comment Watchdog",
  "version": "1.0",
  "description": "Helps you to detect spam comments on Instagram. Shows a rating how likely the comment is a spam.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "host_permissions": [
    "https://api.chucknorris.io/*"
  ],
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": ["css/custom.css"],
      "matches": [
        "https://www.instagram.com/p/*"
      ]
    }
  ]


}